include engine/ShaderPS.txt

uniform vec4 color1;
uniform vec4 color2;
uniform float halfThickness;
uniform float hardness;

shader_in float v_radialPosition;

void main()
{
	float t = halfThickness - abs(v_radialPosition);
	float v = min(1.0, t * hardness);
	float c = t / halfThickness;

	vec4 color = color1 * (1.0 - c) + color2 * c;

	shader_fragColor = vec4(color.rgb, color.a * v);
}
