include engine/ShaderPS.txt
include renderOne/depth-functions.txt

uniform sampler2D source;

shader_in vec2 v_texcoord;

void main()
{
	vec4 value = texture(source, v_texcoord);

	vec3 color = vec3(1.0) - value.rgb;
	float opacity = 1.0 - value.a;

	color = mix(vec3(1.0), color, opacity);

    shader_fragColor = vec4(color, 1.0);
}
