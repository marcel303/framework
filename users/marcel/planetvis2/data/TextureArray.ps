include engine/ShaderPS.txt

shader_in vec2 v_texcoord;

uniform sampler2DArray u_texture;
uniform float textureIndex;
uniform float lod;

vec4 sampleTexture(vec2 texcoord, float lod)
{
	return textureLod(u_texture, vec3(v_texcoord, textureIndex), lod);
	//return textureLod(u_texture, vec3(v_texcoord, textureIndex), 5);
}

void main()
{
	vec4 color = sampleTexture(v_texcoord, lod);
	
	//color.a = 1.0;
	
	shader_fragColor = color;
}
